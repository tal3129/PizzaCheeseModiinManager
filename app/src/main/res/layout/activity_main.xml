<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_horizontal"
				tools:context="com.pizzacheese.pizzacheesemanager.MainActivity"
				android:padding="25dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_horizontal"
		android:orientation="horizontal"
	>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="20dp"
			android:gravity="center_horizontal"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/btnProducts"
				android:layout_width="75dp"
				android:layout_height="75dp"
				android:src="@drawable/new_folder"/>

			<TextView
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="מוצרים"
				android:textSize="14sp"/>

			<ImageView
				android:id="@+id/btnPrefProducts"
				android:layout_width="75dp"
				android:layout_height="75dp"
				android:layout_marginTop="25dp"
				android:src="@drawable/folder_special"/>

			<TextView
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="מוצרים מקודמים"
				android:textSize="14sp"/>

			<ImageView
				android:id="@+id/btnIncomes"
				android:layout_width="75dp"
				android:layout_height="75dp"
				android:layout_marginTop="25dp"
				android:src="@drawable/money_black"/>

			<TextView
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="הכנסות יומיות"
				android:textSize="14sp"/>

			<ImageView
				android:padding="5dp"
				android:layout_width="75dp"
				android:layout_height="75dp"
				android:id="@+id/btnLocations"
				android:src="@drawable/ship"
				android:layout_marginTop="25dp"/>

			<TextView
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textSize="14sp"
				android:text="מיקומי משלוחים"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/btnDiscounts"
				android:layout_width="75dp"
				android:layout_height="75dp"
				android:src="@drawable/giftcard"/>

			<TextView
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="מבצעים"
				android:textSize="14sp"/>


			<ImageView
				android:id="@+id/btnOrders"
				android:layout_width="75dp"
				android:layout_height="75dp"
				android:layout_marginTop="25dp"
				android:src="@drawable/order"/>

			<TextView
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="הזמנות"
				android:textSize="14sp"/>

			<ImageView
				android:id="@+id/btnSettings"
				android:layout_width="75dp"
				android:layout_height="75dp"
				android:layout_marginTop="25dp"
				android:src="@drawable/settings"/>

			<TextView
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="הגדרות"
				android:textSize="14sp"/>

			<ImageView
				android:id="@+id/btnNotification"
				android:layout_width="75dp"
				android:layout_height="75dp"
				android:layout_marginTop="25dp"
				android:src="@drawable/notification"/>

			<TextView
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textSize="14sp"
				android:text="שלח התראה"/>

		</LinearLayout>

	</LinearLayout>

	<ProgressBar
		android:id="@+id/progressBar"
		style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_centerVertical="true"
		android:layout_gravity="center"
		android:progressDrawable="@drawable/greenprogress"
		android:visibility="visible"/>
</RelativeLayout>
